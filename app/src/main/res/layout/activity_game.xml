<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity"
        android:layout_margin="8dp">

    <TextView
            android:id="@+id/game_player_turn_guest"
            android:text="@string/player_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/game_guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#000000"

            app:layout_constraintTop_toTopOf="@id/game_player_turn_guest"
            app:layout_constraintLeft_toRightOf="@id/game_player_turn_guest"/>

    <TextView
            android:id="@+id/game_player_turn"
            android:text="@string/player_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            app:layout_constraintTop_toBottomOf="@id/game_player_turn_guest"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/game_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#000000"

            app:layout_constraintTop_toTopOf="@id/game_player_turn"
            app:layout_constraintLeft_toRightOf="@id/game_player_turn"/>


    <Button
            android:id="@+id/game_btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/game_btn1"
            app:layout_constraintBottom_toTopOf="@id/game_btn3"/>

    <Button
            android:id="@+id/game_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/game_btn0"
            app:layout_constraintTop_toTopOf="@id/game_btn0"
            app:layout_constraintRight_toLeftOf="@id/game_btn2"
            />

    <Button
            android:id="@+id/game_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/game_btn1"
            app:layout_constraintTop_toTopOf="@id/game_btn1"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:id="@+id/game_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/game_btn6"
            app:layout_constraintRight_toLeftOf="@id/game_btn4"
            app:layout_constraintTop_toBottomOf="@id/game_btn0"/>

    <Button
            android:id="@+id/game_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/game_btn3"
            app:layout_constraintTop_toTopOf="@id/game_btn3"
            app:layout_constraintRight_toLeftOf="@id/game_btn5"
    />

    <Button
            android:id="@+id/game_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/game_btn4"
            app:layout_constraintTop_toTopOf="@id/game_btn4"
            app:layout_constraintRight_toRightOf="parent"/>

    />

    <Button
            android:id="@+id/game_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/game_btn7"
            app:layout_constraintTop_toBottomOf="@id/game_btn3"/>

    <Button
            android:id="@+id/game_btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/game_btn6"
            app:layout_constraintTop_toTopOf="@id/game_btn6"
            app:layout_constraintRight_toLeftOf="@id/game_btn8"
    />

    <Button
            android:id="@+id/game_btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/game_btn7"
            app:layout_constraintTop_toTopOf="@id/game_btn7"
            app:layout_constraintRight_toRightOf="parent"/>

    />



</android.support.constraint.ConstraintLayout>